<div id="app">{{content}}</div>
var app = new Vue ({
    el:'#app',
    data: {
        content:hello world",
        list: []
    }
    setTimeout(function() {
        app.$data.content = 'good bye' //两秒以后数据改变
    }, 2000)
})



